    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug",
            "type": "gdb",
            "request": "attach",
            "executable": "./iso/boot/kernel.bin",
            "target": ":9000",
            "cwd": "${workspaceRoot}",
            "remote": true,
            "valuesFormatting": "parseText"
        },
        {
            "name": "Debug Terminal Process",
            "type": "gdb",
            "request": "attach",
            "executable": "./usr/bin/terminal",
            "target": ":9000",
            "cwd": "${workspaceRoot}",
            "remote": true,
            "valuesFormatting": "parseText"
        }
    ]
}